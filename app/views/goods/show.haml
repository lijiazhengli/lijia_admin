.banner-list-content
  = image_tag @set.try(:pc_detailed_image) || @product.pc_detailed_image || '', title: @product.title, alt: @product.title, class: 'banner-img'
  .center-title.white-text.center-text
    %span.line-white-title 收纳工具、让整理更高效

.gray-list-content
  .container.margin-b20
    .row
      .col-md-12.white-show-content.margin-nt100.course-show-content
        .margin-t10.title=@product.title
        .price.price-content
          %span.red-text ¥
          %span.red-text.current-price= @product.price
          %span.red-reverse-bg.btn-span.right-span.cursor-text{:onclick =>"showAppletPop('扫码订购', '扫一扫 小程序下单订购')"} 立即订购

        .desc-content
          = raw(@product.web_content)

      .col-md-12.mb-padding-0px.d-none.d-sm-block
        .swiper-container.pc-course-swiper.margin-t20
          .swiper-wrapper
            - @other_products.each do |item|
              .col-md-3.swiper-slide
                .service-image-list-content.margin-t10.margin-b10.gray-shadow
                  %a{href: "#{good_path(item)}"}
                    = image_tag(item.pc_front_image || '', title: item.title, alt: item.title, class: "service-info-image")
                  .course-info-content
                    .title= item.title
                    .red-text.font-small ¥#{item.price}
                    .right-span.icon-30.icon-cart.cursor-text{:onclick =>"showAppletPop('扫码订购', '扫一扫 小程序下单订购')"}
          - if @other_products.length > 4
            .swiper-button-next
            .swiper-button-prev

      .col-xs-12.col-md-12.mb-padding-0px.d-sm-none
        .swiper-container.mb-course-swiper.margin-t20
          .swiper-wrapper
            - @other_products.each do |item|
              - set = @good_sets.where(id: item.product_set_id).first
              .col-xs-6.col-md-6.swiper-slide
                .service-image-list-content.margin-t10.margin-b10.gray-shadow
                  %a{href: "#{good_path(item)}"}
                    = image_tag(set.try(:pc_front_image) || item.pc_front_image || '', title: item.title, alt: item.title, class: "service-info-image")
                  .course-info-content
                    .title= item.title
                    .red-text.font-small ¥#{item.price}
                    .right-span.icon-30.icon-cart.cursor-text{:onclick =>"showAppletPop('扫码订购', '扫一扫 小程序下单订购')"}
          - if @other_products.length > 2
            .mb-swiper-button-next.swiper-button-next
            .mb-swiper-button-prev.swiper-button-prev


:javascript
  $(document).ready(function(){
    Lijiaweb.SwiperLijia.init();
  });
