!!!
%html{lang: "zh-CN"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "content-type"}/
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title 莉家管理后台
    %meta{content: "", name: "description"}/
    %meta{content: "width=device-width", name: "viewport"}/
    = stylesheet_link_tag    "admin", media: "all"
    = javascript_include_tag "admin"
    = csrf_meta_tags

  %body{role: 'document', style: 'align-items: normal;'}
    %nav.navbar.navbar-dark.fixed-top.bg-dark.flex-md-nowrap.p-0.shadow
      %a.navbar-brand.col-sm-3.col-md-2.mr-0{href: "#"} 莉家整理
      - if false
        %input.form-control.form-control-dark.w-100{type: 'text', placeholder: "Search", "aria-label" => "Search"}
      %ul.navbar-nav.px-3
        %li.nav-item.text-nowrap.white-color
          = @admin.try(:user_name)
          |
          = link_to '退出', admin_do_logout_path, method: :delete, class: "white-color"
          - if @admin.present?
            |
            = link_to '修改密码', edit_admin_admin_path(@admin), class: "white-color"

    %div{style: 'height: 50px;'}
    .container-fluid
      %nav.col-md-2.d-none.d-md-block.bg-light.sidebar
        .sidebar-sticky
          %ul.nav.flex-column
            - if false
              %li.nav-item
                %a.nav-link
                  //%span.fa.fa-user-o
                  用户信息
            %li.nav-item
              = link_to '整理服务', admin_services_path, class: "nav-link #{'active' if params[:controller] == 'admin/services'}"
            %li.nav-item
              = link_to '课程培训', admin_courses_path, class: "nav-link #{'active' if params[:controller] == 'admin/courses'}"
            %li.nav-item
              = link_to '收纳工具', admin_goods_path, class: "nav-link #{'active' if params[:controller] == 'admin/goods'}"
            %li.nav-item
              = link_to '整理师', admin_arrangers_path, class: "nav-link #{'active' if params[:controller] == 'admin/arrangers'}"
            %li.nav-item
              = link_to '讲师', admin_teachers_path, class: "nav-link #{'active' if params[:controller] == 'admin/teachers'}"
            %li.nav-item
              = link_to '订单', admin_orders_path, class: "nav-link #{'active' if params[:controller] == 'admin/orders'}"

      .col-md-12.ml-sm-auto.col-lg-10.px-4{role: 'main'}
        = yield
    %footer#footer