!!!
%html{lang: "zh-CN"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "content-type"}/
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title 莉家管理后台
    %meta{content: "", name: "description"}/
    %meta{content: "width=device-width", name: "viewport"}/

    %meta{"http-equiv" => "X-UA-Compatible", "content" => "IE=edge"}
    %meta{"content" => "yes", "name" => "apple-mobile-web-app-capable"}
    %meta{"name" => "viewport", "content" => "width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no"}
    %link{"rel"=>"shortcut icon", "href"=>"http://image.lijiazhengli.com/web/favicon.ico", "type"=>"image/vnd.microsoft.icon"}

    = stylesheet_link_tag    "admin", media: "all"
    = javascript_include_tag "admin"
    = javascript_include_tag Ckeditor.cdn_url
    

    = csrf_meta_tags

  %body{role: 'document', style: 'align-items: normal;'}
    %nav.navbar.navbar-dark.fixed-top.bg-dark.flex-md-nowrap.p-0.shadow
      %a.navbar-brand.col-2.col-sm-2.col-md-2{href: "#"} 莉家整理
      - if false
        %input.form-control.form-control-dark.w-100{type: 'text', placeholder: "Search", "aria-label" => "Search"}
      %ul.navbar-nav.col-9.col-sm-9.col-md-9{style: "text-align: right;"}
        %li.nav-item.text-nowrap.white-color
          = @admin.try(:user_name)
          |
          = link_to '退出', admin_do_logout_path, method: :delete, class: "white-color"
          - if @admin.present?
            |
            = link_to '修改密码', edit_admin_admin_path(@admin), class: "white-color"

    %div{style: 'height: 50px;'}
    .container-fluid{style: "padding-left: 5px;padding-right: 5px;"}
      %nav.bg-light.sidebar.col-2.col-sm-2.col-md-2{style: "max-width: 14%"}
        .sidebar-sticky
          %ul.nav.flex-column
            - if false
              %li.nav-item
                %a.nav-link
                  //%span.fa.fa-user-o
                  用户信息

            - if @admin.senior_stockholder?
              = render 'layouts/admin_for_senior_stockholder'

            - if @admin.admin_customer_service?
              = render 'layouts/admin_for_customer_service'

            - if @admin.senior_accounting?
              = render 'layouts/admin_for_senior_accounting'

      .col-10.col-sm-10.col-md-10{role: 'main', style: "margin-left: 14%;padding-top: 25px;padding-right: 0px;"}
        = render 'layouts/flash_messages'
        = yield
    %footer#footer