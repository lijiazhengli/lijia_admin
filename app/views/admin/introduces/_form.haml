.col-md-6
  = form_for @item, url: url do |f|
    - if @item.errors.any?
      .form-group
        %ul
          - @item.errors.messages.each do |key,msg|
            %li= msg.join(',')
    .form-group
      = f.label "名称"
      %br
      = f.text_field :title, class: 'form-control'

    .form-group
      = f.label "标签"
      %br
      = f.text_field :tag, class: 'form-control'

    .form-group
      = f.label "图片类型"
      = f.select :item_type, options_for_select(Introduce::ITEM_TYPE.invert, @item.item_type), {}, class: 'form-control'

    .form-group
      = f.label "描述"
      %br
      = f.text_area :description, class: 'form-control'

    .form-group
      = f.label "是否启用"
      = f.select :active, options_for_select({'是' => true, '否' => false}, @item.active), {}, class: 'form-control'

    = f.text_field :mobile_image, style: 'display: none'
    = render partial: 'upload_image', locals: {item: @item, image_name: 'mobile_image', image_size: '手机图片(686x340)', button_name: 'mobile-image', input_name: 'introduce_mobile_image', upload_url: file_upload_admin_introduces_path(type: 'mobile')}

    = f.text_field :pc_image, style: 'display: none'
    = render partial: 'upload_image', locals: {item: @item, image_name: 'pc_image', image_size: '电脑图片(团队介绍：580x480, 加盟：1170x260, 页面通栏图：宽1920)', button_name: 'pc-image', input_name: 'introduce_pc_image', upload_url: file_upload_admin_introduces_path(type: 'pc')}
    = f.submit '保存', class: 'btn btn-success'



