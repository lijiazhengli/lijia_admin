.col-md-6
  = form_for @arranger, url: url do |f|
    - if @arranger.errors.any?
      .form-group
        %ul
          - @arranger.errors.messages.each do |key,msg|
            %li= msg.join(',')
    .form-group
      = f.label "*名称"
      %br
      = f.text_field :name, class: 'form-control'

    .form-group
      = f.label "电话"
      %br
      = f.text_field :phone_number, class: 'form-control'

    .form-group
      = f.label "基础单量"
      %br
      = f.text_field :base_order_count, class: 'form-control'

    .form-group
      = f.label "是否启用"
      = f.select :active, options_for_select({'是' => true, '否' => false}, @arranger.active), {}, class: 'form-control'

    = f.submit '保存', class: 'btn btn-success'
