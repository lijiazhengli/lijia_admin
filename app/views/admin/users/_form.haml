.col-md-6
  = form_for @item, url: url do |f|
    - if @item.errors.any?
      .form-group
        %ul
          - @item.errors.messages.each do |key,msg|
            %li= msg.join(',')
    .form-group
      = f.label "*名称"
      %br
      = f.text_field :name, class: 'form-control'
    - if false
      .form-group
        = f.label "*手机号码"
        %br
        = f.text_field :phone_number, class: 'form-control'
    .form-group
      = f.label "类型"
      %br
      说明：此类型用于算提成和绩效
      = f.select :status, options_for_select(User::STATUS.invert, @item.status), {}, class: 'form-control'
    .form-group
      = f.label "大区"
      = f.select :area, options_for_select(User::AREA_STATUS.invert, @item.area), {include_blank: true}, class: 'form-control'
    .form-group
      = f.label "*折扣"
      %br
      说明：0.9 代表下单时享受9折优惠（仅收纳工具订单有效），折扣信息不能大于1， 学员8折、合伙人6折。
      = f.text_field :zhekou, class: 'form-control'
    .form-group
      = f.label "是否查看绩效"
      = f.select :show_achievement, options_for_select({'是' => true, '否' => false}, @item.show_achievement), {}, class: 'form-control'
    .form-group
      = f.label "是否享受课程优惠"
      = f.select :is_course_discount, options_for_select({'是' => true, '否' => false}, @item.is_course_discount), {}, class: 'form-control'

    = f.submit '保存', class: 'btn btn-success'