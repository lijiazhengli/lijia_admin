%h3 收纳工具分类详细图片列表
= link_to '新建收纳工具分类图片', new_admin_product_set_product_set_image_path(@parent), class: "btn btn-success"
= link_to '返回', admin_product_sets_path, class: "btn btn-success"


%table.table.table-striped
  %tr
    %th 图片
    %th 是否显示
    %th 操作

  %tbody(ondragstart="dragEnterHandler(event)" ondragover="dragOverHandler(event)" ondragend="dragEndHandler(event)")
    - @items.each do |item|
      - @draggable = true
      %tr(id="product-image-#{item.id}" draggable='true' data-id= "#{item.id}" data-up_url= "#{up_serial_admin_product_set_product_set_images_path(:id =>item.id)}" data-down_url= "#{down_serial_admin_product_set_product_set_images_path(:id =>item.id)}")
        %td= image_tag change_to_qiniu_https_url(item.mobile_image), style: 'width: 100px'
        %td= active_chinese_name(item)
        %td
          = link_to '修改', edit_admin_product_set_product_set_image_path(@parent, item)
          |
          - if item.active
            = link_to '关闭', disable_admin_product_set_product_set_image_path(@parent,item), :method => :put
          - else
            = link_to '启用', enable_admin_product_set_product_set_image_path(@parent,item), :method => :put
          |
          = link_to '删除', admin_product_set_product_set_image_path(@parent, item), method: :delete, data: { :confirm => '确定删除吗？' }
