.col-md-12
  = form_for @item, url: url do |f|
    - if @item.errors.any?
      .form-group
        %ul
          - @item.errors.messages.each do |key,msg|
            %li= msg.join(',')
    .form-group
      = f.label "名称"
      %br
      = f.text_field :title, class: 'form-control'


    .form-group
      = f.label "网址"
      %br
      不能超过50个字符，只能是 小写字母、数字、-、_
      %br
      = f.text_field :url, class: 'form-control'

    .form-group
      = f.label "描述"
      %br
      = f.cktext_area :content, ckeditor: { language: 'zh-cn'}

    .form-group
      = f.label "是否启用"
      = f.select :active, options_for_select({'是' => true, '否' => false}, @item.active), {}, class: 'form-control'

    = f.submit '保存', class: 'btn btn-success'



