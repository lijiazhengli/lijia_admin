.col-md-6
  = form_for @course, url: url do |f|
    - if @course.errors.any?
      .form-group
        %ul
          - @course.errors.messages.each do |key,msg|
            %li= msg.join(',')
    .form-group
      = f.label "*名称"
      %br
      = f.text_field :title, class: 'form-control'

    .form-group
      = f.label "城市"
      %br
      = f.text_field :city_name, class: 'form-control'

    .form-group
      = f.label "费用"
      %br
      = f.text_field :price, class: 'form-control'

    .form-group
      = f.label "培训地址"
      %br
      = text_field_tag :course_address , params[:course_address], class: 'form-control'

    .form-group
      = f.label "描述"
      %br
      = f.text_area :description, class: 'form-control'

    .form-group
      = f.label "*开始日期"
      %br
      = f.text_field :start_date, class: 'form-control', type: :date
    .form-group
      = f.label "*结束日期"
      %br
      = f.text_field :end_date, class: 'form-control', type: :date
    .form-group
      = f.label "是否启用"
      = f.select :active, options_for_select({'是' => true, '否' => false}, @course.active), {}, class: 'form-control'

    = f.text_field :front_image, style: 'display: none'
    = render partial: 'upload_image', locals: {item: @course, image_name: 'front_image', image_size: '首页图片(686x340)', button_name: 'front-image', input_name: 'course_front_image', upload_url: file_upload_admin_courses_path(type: 'front')}

    = f.text_field :detailed_image, style: 'display: none'
    = render partial: 'upload_image', locals: {item: @course, image_name: 'detailed_image', image_size: '详细页图片(750x360)', button_name: 'detailed-image', input_name: 'course_detailed_image', upload_url: file_upload_admin_courses_path(type: 'detailed')}
    = f.submit '保存', class: 'btn btn-success'

